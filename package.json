{
    "name":  "rpc-express-toolkit",
    "version":  "4.2.1",
    "description":  "Enterprise-ready JSON-RPC 2.0 toolkit for Express.js with simplified APIs, structured logging, middleware system, schema validation, comprehensive BigInt/Date support. JSON middleware validation and explicit configuration.",
    "main":  "src/index.js",
    "types":  "src/index.d.ts",
    "exports":  {
                    ".":  {
                              "types":  "./src/index.d.ts",
                              "require":  "./src/index.js",
                              "import":  "./src/index.js"
                          },
                    "./safe":  {
                                   "types":  "./src/safe.d.ts",
                                   "require":  "./src/safe.js",
                                   "import":  "./src/safe.js"
                               }
                },
    "files":  [
                  "src/",
                  "examples/",
                  "README.md",
                  "LICENSE"
              ],
    "scripts":  {
                    "test":  "jest",
                    "test:coverage":  "jest --coverage",
                    "test:watch":  "jest --watch",
                    "lint":  "eslint src/ examples/",
                    "lint:fix":  "eslint src/ examples/ --fix",
                    "clean":  "node -e \"require(\u0027fs\u0027).existsSync(\u0027dist\u0027) \u0026\u0026 require(\u0027fs\u0027).rmSync(\u0027dist\u0027, {recursive: true})\"",
                    "build":  "npm run build:minify",
                    "build:minify":  "npm run build:js \u0026\u0026 npm run build:mjs",
                    "build:js":  "terser src/clients/rpc-client.js -o src/clients/rpc-client.min.js --compress --mangle --comments false --ecma 2020",
                    "build:mjs":  "terser src/clients/rpc-client.mjs -o src/clients/rpc-client.min.mjs --compress --mangle --comments false --module --ecma 2020",
                    "prepublishOnly":  "npm run build",
                    "precommit":  "npm run lint \u0026\u0026 npm test"
                },
    "repository":  {
                       "type":  "git",
                       "url":  "git+https://github.com/n-car/rpc-express-toolkit.git"
                   },
    "keywords":  [
                     "json-rpc",
                     "jsonrpc",
                     "json-rpc-2.0",
                     "express",
                     "toolkit",
                     "rpc",
                     "server",
                     "client",
                     "middleware",
                     "validation",
                     "schema",
                     "ajv",
                     "bigint",
                     "date",
                     "enterprise",
                     "nodejs",
                     "node",
                     "browser",
                     "ssl",
                     "self-signed",
                     "secure",
                     "fetch",
                     "batch",
                     "typescript",
                     "logging",
                     "cors",
                     "rate-limit",
                     "authentication"
                 ],
    "author":  "Nicola Carpanese \u003cnicola.carpanese@gmail.com\u003e",
    "license":  "MIT",
    "bugs":  {
                 "url":  "https://github.com/n-car/rpc-express-toolkit/issues"
             },
    "homepage":  "https://github.com/n-car/rpc-express-toolkit#readme",
    "engines":  {
                    "node":  "\u003e=18.0.0"
                },
    "devDependencies":  {
                            "eslint":  "^8.57.1",
                            "eslint-config-airbnb-base":  "^15.0.0",
                            "eslint-config-prettier":  "^9.1.2",
                            "eslint-plugin-import":  "^2.31.0",
                            "eslint-plugin-prettier":  "^5.5.3",
                            "husky":  "^8.0.0",
                            "jest":  "^29.7.0",
                            "lint-staged":  "^13.0.0",
                            "prettier":  "^3.6.2",
                            "supertest":  "^6.3.3",
                            "terser":  "^5.43.1"
                        },
    "dependencies":  {
                         "ajv":  "^8.12.0",
                         "ajv-formats":  "^2.1.1",
                         "express":  "^4.21.2",
                         "nested-error-stacks":  "^2.1.1"
                     },
    "optionalDependencies":  {
                                 "node-fetch":  "^2.7.0"
                             },
    "contributors":  [
                         {
                             "name":  "Nicola Carpanese",
                             "email":  "nicola.carpanese@gmail.com",
                             "url":  "https://github.com/n-car"
                         }
                     ],
    "husky":  {
                  "hooks":  {
                                "pre-commit":  "lint-staged"
                            }
              },
    "lint-staged":  {
                        "src/**/*.js":  [
                                            "eslint --fix",
                                            "prettier --write"
                                        ],
                        "examples/**/*.js":  [
                                                 "eslint --fix",
                                                 "prettier --write"
                                             ]
                    }
}